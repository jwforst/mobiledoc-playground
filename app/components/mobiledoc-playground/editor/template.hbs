{{#mobiledoc-editor mobiledoc=mobiledoc on-change=onMobiledocUpdated as |editor|
}}
  <div local-class="editor-toolbar">
    {{#mobiledoc-section-button editor=editor for="h1"}}
      h1
    {{/mobiledoc-section-button}}
    {{#mobiledoc-section-button editor=editor for="h2"}}
      h2
    {{/mobiledoc-section-button}}
    {{#mobiledoc-section-button editor=editor for="h3"}}
      h3
    {{/mobiledoc-section-button}}
    {{#mobiledoc-section-button editor=editor for="h4"}}
      h4
    {{/mobiledoc-section-button}}
    {{#mobiledoc-section-button editor=editor for="h5"}}
      h5
    {{/mobiledoc-section-button}}
    {{#mobiledoc-section-button editor=editor for="h6"}}
      h6
    {{/mobiledoc-section-button}}
    {{#mobiledoc-section-button editor=editor for="blockquote"}}
      Blockquote
    {{/mobiledoc-section-button}}
    {{#mobiledoc-section-button editor=editor for="ul"}}
      Unordered List
    {{/mobiledoc-section-button}}
    {{#mobiledoc-section-button editor=editor for="ol"}}
      Ordered List
    {{/mobiledoc-section-button}}
  </div>
{{/mobiledoc-editor}}
